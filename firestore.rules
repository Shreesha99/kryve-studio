rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    match /blog_posts/{blogPostId} {
      allow read: if true;
      // This is insecure for production but allows for development.
      // We will add proper authentication rules next.
      allow write: if true;
    }

    match /projects/{projectId} {
      allow read: if true;
      allow write: if false; // Keep projects read-only for now
    }

    match /services/{serviceId} {
      allow read: if true;
      allow write: if false; // Keep services read-only for now
    }
    
    match /subscribers/{subscriberId} {
      // Allow a client to check if a specific document exists by its ID (email).
      allow get: if true;
      // Explicitly deny listing all subscribers to protect privacy.
      allow list: if false;
      // Allow a new subscriber to be created.
      allow create: if true;
      // Deny updates to prevent changing subscription details from the client.
      allow update: if false;
      // Allow users to delete their own subscription via the unsubscribe link.
      allow delete: if true;
    }
  }
}
